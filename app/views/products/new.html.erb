<h1>新しい商品を登録</h1>

<%= form_with model: @product, url: products_path do |form| %>
  <div>
    <%= form.label :name, '商品名' %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :price, '価格' %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.submit '登録' %>
  </div>
<% end %>

<%= link_to '戻る', products_path %>