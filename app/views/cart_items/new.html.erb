<h1>カートに商品を追加</h1>

<%= form_with model: @cart_item, url: cart_items_path do |form| %>
  <div>
    <%= form.label :qty, '数量' %>
    <%= form.number_field :qty %>
  </div>

  <div>
    <%= form.hidden_field :product_id, value: @product.id %>
    <%= form.submit 'カートに追加' %>
  </div>
<% end %>

<%= link_to '戻る', products_path %>